<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <TextView
        android:id="@+id/num"
        android:layout_width="@dimen/ico_among_size"
        android:layout_height="@dimen/ico_among_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="@dimen/space_xbig"
        android:background="@drawable/bg_black11_corners"
        android:gravity="center"/>

    <TextView
        android:id="@+id/content"
        style="@style/smallTitleTheme"
        android:layout_marginBottom="@dimen/space_xbig"
        android:layout_marginRight="@dimen/space_big"
        android:lineSpacingExtra="@dimen/space_small"
        />
</LinearLayout>