<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white00"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/space_big">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_top"
        android:gravity="center"
        android:padding="@dimen/space_xxbig"
        android:scrollbars="vertical"
        android:textColor="@color/blackbb"
        android:textSize="@dimen/font_size_d"
        android:textStyle="bold" />
    <!-- 在LinearLayout中加按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yes"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space_xbig"
            android:textSize="@dimen/font_size_d"
            android:textStyle="bold"
            android:textColor="@color/blackbb"/>

        <TextView
            android:id="@+id/no"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space_xbig"
            android:layout_marginLeft="2px"
            android:textSize="@dimen/font_size_d"
            android:textColor="@color/black88"/>

    </LinearLayout>

</LinearLayout>